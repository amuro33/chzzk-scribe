{
    "appId": "com.chzzk.scribe",
    "productName": "chzzk-scribe",
    "directories": {
        "output": "dist_electron"
    },
    "files": [
        "package.json",
        "electron/**/*",
        "lib/**/*",
        "out/**/*",
        "public/**/*",
        "node_modules/**/*"
    ],
    "extraResources": [
        {
            "from": "bin",
            "to": "bin",
            "filter": [
                "**/*",
                "!**/python/Lib/test/**",
                "!**/python/Lib/idlelib/**",
                "!**/python/Lib/tkinter/**",
                "!**/python/Lib/turtledemo/**",
                "!**/python/Lib/**/__pycache__/**",
                "!**/python/Lib/**/*.pyc",
                "!**/python/Lib/**/*.pyo",
                "!**/python/Lib/site-packages/torch/**",
                "!**/python/Lib/site-packages/tensorflow/**",
                "!**/python/Lib/site-packages/scipy/**",
                "!**/python/Lib/site-packages/pandas/**",
                "!**/python/Lib/site-packages/matplotlib/**",
                "!**/python/Lib/site-packages/jupyter/**",
                "!**/python/Lib/site-packages/notebook/**",
                "!**/python/Lib/site-packages/IPython/**",
                "!**/python/Lib/site-packages/*/tests/**",
                "!**/python/Lib/site-packages/*/test/**",
                "!**/python/Lib/site-packages/**/tests/**",
                "!**/python/Lib/site-packages/**/test/**"
            ]
        }
    ],
    "asarUnpack": [
        "**/node_modules/@ffmpeg-installer/**/*",
        "**/lib/transcribe_wrapper.py"
    ],
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            },
            {
                "target": "portable",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "public/icon.png",
        "requestedExecutionLevel": "asInvoker"
    },
    "portable": {
        "artifactName": "${productName} ${version} Portable.${ext}"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "shortcutName": "치지직 스크라이브",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "runAfterFinish": true,
        "artifactName": "${productName} ${version} Installer.${ext}"
    },
    "publish": {
        "provider": "github",
        "owner": "amuro33",
        "repo": "chzzk-scribe"
    }
}