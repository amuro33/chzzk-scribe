{
    "appId": "com.chzzk.scribe",
    "productName": "chzzk-scribe",
    "directories": {
        "output": "dist_electron"
    },
    "files": [
        "package.json",
        "electron/**/*",
        "lib/**/*",
        "out/**/*",
        "public/**/*",
        "node_modules/**/*"
    ],
    "extraResources": [
        {
            "from": "bin",
            "to": "bin",
            "filter": [
                "**/*"
            ]
        }
    ],
    "asarUnpack": [
        "**/node_modules/@ffmpeg-installer/**/*"
    ],
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            },
            {
                "target": "zip",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "public/icon.png",
        "requestedExecutionLevel": "asInvoker",
        "artifactName": "${productName} ${version} Portable.${ext}"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "shortcutName": "치지직 스크라이브",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "runAfterFinish": true,
        "artifactName": "${productName} ${version} Installer.${ext}"
    },
    "publish": {
        "provider": "github",
        "owner": "amuro33",
        "repo": "chzzk-scribe"
    }
}